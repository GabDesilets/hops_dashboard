 <div class="col-md-6 col-md-offset-3" style="margin-top: 10%">
   <h1>Signup!</h1>

   <%= form_for :user, url: '/users', class: 'form-signin' do |f| %>
       <h2 class="form-signin-heading">Please sign in</h2>
       <%= f.label :email, class:'sr-only' %>
       <%= f.email_field :email, class: 'form-control', placeholder: 'Email address', required: '', autofocus: '' %>

       <%= f.label :password , class:'sr-only' %>
       <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: ''%>

       <%= f.label :password_confirmation , class:'sr-only' %>
       <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation', required: ''%>
       <div class="checkbox"></div>
       <p>
         <%= f.submit 'Sign me up !', class: 'btn btn-lg btn-primary btn-block' %>
       </p>
   <% end %>
  </div>

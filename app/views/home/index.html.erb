 <div class="col-md-6 col-md-offset-3" style="margin-top: 10%">
   <%= @hash == 'superpass' %>
    <%= form_for(:user, class: 'form-signin') do |f| %>
        <h2 class="form-signin-heading">Please sign in</h2>
        <%= f.label :email, class:'sr-only' %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email address', required: '', autofocus: '' %>

        <%= f.label :password , class:'sr-only' %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: ''%>
       <div class="checkbox"></div>
       <p>
         <%= f.submit 'Log in', class: 'btn btn-lg btn-primary btn-block' %>
       </p>

        <p>New user? <%= link_to 'Sign up now!' %></p>
    <% end %>
  </div>
